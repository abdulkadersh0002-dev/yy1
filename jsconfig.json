{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@domain/*": ["src/domain/*"],
      "@services/*": ["src/services/*"],
      "@engine/*": ["src/engine/*"],
      "@database/*": ["src/database/*"],
      "@monitoring/*": ["src/monitoring/*"],
      "@trading/*": ["src/trading/*"],
      "@config/*": ["src/config/*"]
    },
    "checkJs": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "routes/**/*",
    "tests/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ]
}
