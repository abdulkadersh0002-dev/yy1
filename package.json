{
  "name": "intelligent-auto-trading-system",
  "version": "1.0.0",
  "description": "EA-driven automated trading system with economic, news, and technical analysis",
  "type": "module",
  "main": "src/server.js",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "packageManager": "npm@10",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node scripts/start.mjs",
    "dev:backend": "node --watch src/server.js",
    "dev:dashboard": "npm --prefix clients/neon-dashboard run dev",
    "dashboard:build": "npm --prefix clients/neon-dashboard run build",
    "dashboard:preview": "npm --prefix clients/neon-dashboard run preview",
    "lint": "eslint . --ext .js --ignore-pattern \"clients/neon-dashboard/**\"",
    "lint:fix": "eslint . --ext .js --fix --ignore-pattern \"clients/neon-dashboard/**\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "format:write": "prettier --write \"**/*.{js,json,md}\"",
    "test": "node --test \"tests/**/*.test.js\"",
    "test:watch": "node --test --watch \"tests/**/*.test.js\"",
    "test:unit": "node --test \"tests/unit/**/*.test.js\"",
    "test:integration": "node --test \"tests/integration/**/*.test.js\"",
    "test:ci": "npm run test:unit && npm run test:integration",
    "test:coverage": "node --experimental-test-coverage --test tests/unit/**/*.test.js",
    "ci:audit": "npm audit --audit-level=high",
    "ci:coverage": "node scripts/ci/coverage-gate.js",
    "ci:quality-gates": "node scripts/ci/quality-gates.js",
    "config:validate": "node scripts/ci/validate-configs.js",
    "db:migrate": "node scripts/run-migrations.js",
    "deploy:stage": "node scripts/deploy/create-staging-bundle.js",
    "backtest:run": "node scripts/backtest/run-backtests.js",
    "etl:historical": "node scripts/etl/run-historical-warehouse.js",
    "etl:refresh": "node scripts/etl/run-data-refresh.js",
    "news:rss": "node scripts/fetch-rss-feeds.js",
    "test:data-sources": "node scripts/test-data-sources.js",
    "validate:providers": "node scripts/validate-providers.js",
    "diagnostics:unused-src": "node scripts/diagnostics/find-unused-src.mjs",
    "diagnostics:unused-dashboard": "node scripts/diagnostics/find-unused-dashboard.mjs",
    "prepare": "npx simple-git-hooks"
  },
  "keywords": [
    "forex",
    "trading",
    "automation",
    "ai",
    "technical-analysis",
    "economic-analysis"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@vitalets/google-translate-api": "^9.2.0",
    "ajv": "^8.17.1",
    "axios": "^1.7.0",
    "bcryptjs": "^3.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "franc": "^6.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.11",
    "otplib": "^12.0.1",
    "pg": "^8.13.1",
    "pino": "^8.15.1",
    "pino-pretty": "^10.3.0",
    "prom-client": "^14.2.0",
    "rss-parser": "^3.13.0",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "simple-git-hooks": "^2.11.2"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "node_modules/",
      "dist/",
      "coverage/",
      "build/",
      "clients/neon-dashboard/**"
    ],
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "no-console": "off",
      "no-extra-boolean-cast": "off",
      "no-control-regex": "off",
      "prefer-const": "error",
      "no-var": "error",
      "eqeqeq": [
        "error",
        "always",
        {
          "null": "ignore"
        }
      ],
      "curly": [
        "error",
        "all"
      ],
      "no-throw-literal": "error",
      "prefer-arrow-callback": "warn",
      "prefer-template": "warn",
      "no-duplicate-imports": "error",
      "no-useless-return": "error"
    },
    "overrides": [
      {
        "files": [
          "tests/**/*.test.js",
          "tests/**/*.spec.js"
        ],
        "env": {
          "node": true
        },
        "rules": {
          "no-unused-expressions": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/",
    "build/",
    "coverage/",
    "reports/",
    "logs/",
    "tmp/",
    "temp/",
    "clients/neon-dashboard/dist/"
  ],
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "always",
    "trailingComma": "es5",
    "endOfLine": "lf"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
