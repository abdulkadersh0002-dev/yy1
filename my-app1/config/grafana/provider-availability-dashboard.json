{
  "title": "Signals Provider Availability",
  "uid": "signals-provider-availability",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 2,
  "refresh": "30s",
  "panels": [
    {
      "type": "gauge",
      "title": "Uptime Ratio (History Window)",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        {
          "expr": "signals_provider_availability_uptime_ratio{window=\"history\"}",
          "legendFormat": "history"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.985 },
              { "color": "green", "value": 0.995 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Incidents (Last Hour)",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        {
          "expr": "signals_provider_availability_recent_incidents{window=\"1h\"}",
          "legendFormat": "{{severity}}"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 3 }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "State Samples",
      "gridPos": { "h": 8, "w": 16, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        {
          "expr": "signals_provider_availability_samples_total",
          "legendFormat": "{{state}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Provider Availability State",
      "gridPos": { "h": 8, "w": 16, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        {
          "expr": "signals_provider_availability_state",
          "legendFormat": "{{state}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "legend": {
          "calcs": ["lastNotNull"],
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Provider Availability (Per Provider)",
      "gridPos": { "h": 8, "w": 16, "x": 0, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        {
          "expr": "signals_provider_availability_provider_state{metric=\"available\"}",
          "legendFormat": "{{provider}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "options": {
        "legend": {
          "calcs": ["lastNotNull"],
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Provider Normalized Quality",
      "gridPos": { "h": 8, "w": 16, "x": 0, "y": 32 },
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "targets": [
        {
          "expr": "signals_provider_availability_provider_state{metric=\"normalized_quality\"}",
          "legendFormat": "{{provider}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1
        }
      },
      "options": {
        "legend": {
          "calcs": ["lastNotNull"],
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Provider Availability Ratio (24h)",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 40 },
      "datasource": { "type": "postgres", "uid": "TIMESCALE_DS" },
      "targets": [
        {
          "refId": "A",
          "format": "time_series",
          "rawSql": "SELECT\n  time_bucket('5 minutes', captured_at) AS \"time\",\n  provider_entry->>'provider' AS provider,\n  AVG(CASE WHEN provider_entry->>'available' = 'true' THEN 1 ELSE 0 END) AS value\nFROM provider_availability_history\nCROSS JOIN LATERAL jsonb_array_elements(COALESCE(metadata->'providers', '[]'::jsonb)) AS provider_entry\nWHERE captured_at >= NOW() - INTERVAL '24 hours'\nGROUP BY 1, 2\nORDER BY 1;"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "calcs": ["lastNotNull"],
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Provider Normalized Quality (7d)",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 40 },
      "datasource": { "type": "postgres", "uid": "TIMESCALE_DS" },
      "targets": [
        {
          "refId": "A",
          "format": "time_series",
          "rawSql": "SELECT\n  time_bucket('1 hour', captured_at) AS \"time\",\n  provider_entry->>'provider' AS provider,\n  AVG(CAST(NULLIF(NULLIF(provider_entry->'metrics'->>'normalizedQuality', 'null'), '') AS NUMERIC)) AS value\nFROM provider_availability_history\nCROSS JOIN LATERAL jsonb_array_elements(COALESCE(metadata->'providers', '[]'::jsonb)) AS provider_entry\nWHERE captured_at >= NOW() - INTERVAL '7 days'\nGROUP BY 1, 2\nORDER BY 1;"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "calcs": ["lastNotNull"],
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        }
      }
    }
  ],
  "templating": {
    "list": []
  }
}
