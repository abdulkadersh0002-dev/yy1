{
  "$id": "news-analysis.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "News Analysis",
  "type": "object",
  "required": [
    "pair",
    "timestamp",
    "baseNews",
    "quoteNews",
    "calendar",
    "sentiment",
    "impact",
    "direction",
    "confidence",
    "sources"
  ],
  "properties": {
    "pair": { "type": "string" },
    "timestamp": { "type": "number" },
    "baseNews": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "headline": { "type": ["string", "null"] },
          "score": { "type": ["number", "null"] },
          "impact": { "type": ["number", "null"] }
        },
        "additionalProperties": true
      }
    },
    "quoteNews": { "$ref": "#/properties/baseNews" },
    "calendar": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "time": { "type": ["string", "number"] },
          "impact": { "type": "number" },
          "currency": { "type": "string" },
          "event": { "type": "string" }
        },
        "required": ["impact"],
        "additionalProperties": true
      }
    },
    "sentiment": {
      "type": "object",
      "required": ["base", "quote", "overall"],
      "properties": {
        "base": { "type": "number" },
        "quote": { "type": "number" },
        "overall": { "type": "number" }
      }
    },
    "impact": { "type": "number" },
    "direction": { "type": "string" },
    "confidence": { "type": "number" },
    "sources": {
      "type": "object",
      "additionalProperties": { "type": "boolean" }
    },
    "sentimentFeeds": {
      "type": ["object", "null"],
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
